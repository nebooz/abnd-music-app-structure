<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/musicColorPrimary</item>
        <item name="colorPrimaryDark">@color/musicColorPrimaryDark</item>
        <item name="colorAccent">@color/musicColorAccent</item>
    </style>

    <style name="activityTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="activityBody">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">#BE000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


</resources>
